{
  "name": "gnuradio",
  "buildsystem": "cmake",
  "cmake": true,
  "config-opts": [
    "-DCMAKE_BUILD_TYPE=Release",
    "-DENABLE_TESTING:BOOL=OFF",
    "-DCMAKE_INSTALL_LIBDIR=lib",
    "-DENABLE_INTERNAL_VOLK:BOOL=OFF",
    "-DENABLE_GR_CTRLPORT:BOOL=OFF",
    "-DENABLE_SPHINX:BOOL=OFF",
    "-DENABLE_PYTHON:BOOL=OFF",
    "-DENABLE_GRC:BOOL=OFF",
    "-DENABLE_GR_ANALOG:BOOL=ON",
    "-DENABLE_GR_AUDIO:BOOL=ON",
    "-DENABLE_GR_BLOCKS:BOOL=ON",
    "-DENABLE_GR_CHANNELS:BOOL=OFF",
    "-DENABLE_GR_COMEDI:BOOL=OFF",
    "-DENABLE_GR_DIGITAL:BOOL=ON",
    "-DENABLE_GR_DTV:BOOL=OFF",
    "-DENABLE_GR_FCD:BOOL=ON",
    "-DENABLE_GR_FEC:BOOL=OFF",
    "-DENABLE_GR_FFT:BOOL=ON",
    "-DENABLE_GR_FILTER:BOOL=ON",
    "-DENABLE_GR_NOAA:BOOL=OFF",
    "-DENABLE_GR_QTGUI:BOOL=OFF",
    "-DENABLE_GR_TRELLIS:BOOL=OFF",
    "-DENABLE_GR_UHD:BOOL=OFF",
    "-DENABLE_GR_UTILS:BOOL=OFF",
    "-DENABLE_GR_VIDEO_SDL:BOOL=OFF",
    "-DENABLE_GR_VOCODER:BOOL=OFF",
    "-DENABLE_GR_WAVELET:BOOL=OFF",
    "-DENABLE_GR_ZEROMQ:BOOL=OFF"
  ],
  "make-args": [
    "-j4"
  ],
  "sources": [
    {
      "type": "archive",
      "url": "http://gnuradio.org/releases/gnuradio/gnuradio-3.7.10.1.tar.gz",
      "sha256": "63d7b65cc4abe22f47b8f41caaf7370a0a502b91e36e29901ba03e8838ab4937"
    }
  ],
  "modules": [
    {
      "name": "fftw",
      "config-opts": [
        "--enable-shared",
        "--enable-single",
        "--enable-float",
        "--enable-sse",
        "--enable-sse2",
        "--enable-avx",
        "--enable-avx2",
        "--enable-avx512",
        "--enable-avx-128-fma"
      ],
      "sources": [
        {
          "type": "archive",
          "url": "http://www.fftw.org/fftw-3.3.6-pl1.tar.gz",
          "sha256": "1ef4aa8427d9785839bc767f3eb6a84fcb5e9a37c31ed77a04e7e047519a183d"
        }
      ],
      "modules" : [
        "python/python2-lxml.json",
        "python/python2-numpy.json"
      ]
    }
  ],
  "builddir": true
}