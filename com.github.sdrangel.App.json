{
    "app-id": "com.github.sdrangel.App",
    "runtime": "org.kde.Platform",
    "runtime-version": "5.11",
    "sdk": "org.kde.Sdk",
    "command": "sdrangel",
    "finish-args": [
        "--socket=x11",
        "--socket=wayland",
        "--socket=pulseaudio",
        "--filesystem=home:rw",
        "--share=ipc",
        "--device=all"
    ],
    "modules": [
        "common/boost.json",
        "common/libusb.json",
        "common/soapysdr.json",
        "common/soapylms7.json",
        "common/libad9361-iio.json",
        "common/rtl-sdr.json",
        "sdrangel/dsdcc.json",
        {
            "name": "sdrangel",
            "buildsystem": "cmake",
            "cmake": true,
            "config-opts": [
                "-DCMAKE_BUILD_TYPE=Release",
                "-DLIBDSDCC_INCLUDE_DIR=/app/include/dsdcc",
                "-DCM256CC_INCLUDE_DIR=/app/include/cm256cc"
            ],
            "make-args": [
                "-j4"
            ],
            "sources": [
                {
                    "type": "git",
                    "url": "https://github.com/f4exb/sdrangel"
                },
                {
                    "type": "patch",
                    "path": "sdrangel/sdrangel.patch"
                }
            ]
        }
    ]
}
